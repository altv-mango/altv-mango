{
    "$schema": "https://turborepo.org/schema.json",
    "pipeline": {
        "build": {
            "dependsOn": ["^build"],
            "outputs": ["dist"]
        },
        "watch": {
            "dependsOn": ["^build"],
            "outputs": ["dist"]
        },
        "types": {
            "dependsOn": ["^types"],
            "outputs": ["dist"]
        },
        "typecheck": {}
    }
}
